ifndef config
  config=debug64
endif
export config

PROJECTS := shatter-cpp

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

shatter-cpp: 
	@echo "==== Building shatter-cpp ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f shatter-cpp.make

clean:
	@${MAKE} --no-print-directory -C . -f shatter-cpp.make clean

help:
